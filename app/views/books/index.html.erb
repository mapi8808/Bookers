<h1>Books</h1>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    
  <tbody>
  <tr>
  <% @books.each do |book| %>
  <td><%= book.title %></td>
   <td><%= book.body %></td>
   <td><%= link_to 'Show', book_path(book.id), class:"show_#{book.id}" %></td>
    <td><%= link_to "Edit", edit_book_path(book.id), class:"edit_#{book.id}" %></td>
    <td><%= link_to 'Destroy', books_path(book.id), method: :delete, data: { confirm: "Are you sure?" }, class:"destroy_#{book.id}" %></td>
   </tr>
     <% end %>
   </tbody>
  </table>
  

  

<h1>New Books</h1>
<!-- form_with部分 -->
<%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>
  <div>
  <%= f.submit 'Create Book' %>
</div>
<% end %>
