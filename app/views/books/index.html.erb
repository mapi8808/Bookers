<h1>Books</h1>
 
 <table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      </th>
      <th colspan="3"></th>
   <tr>
<% @books.each do |book| %>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
   
  <th><%= link_to "Show",book_path(book.id) %></th>
 <th><%= link_to "Edit",edit_book_path(book.id) %></th>
  <th><%= link_to "Destroy", books_path(@book), method: :delete, data: { confirm: "Are you sure?" } %></th>
   </tr>
  </thead>
  <% end %>
  

<h1>New Books</h1>
<!-- form_with部分 -->
<%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>
